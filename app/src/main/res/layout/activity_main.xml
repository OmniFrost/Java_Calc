<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt1Num"
        android:layout_width="291dp"
        android:layout_height="76dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Give first number"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt2Num"
        android:layout_width="339dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Give second number"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1Num" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="144dp"
        android:layout_height="98dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:background="#2196F3"
        android:onClick="addition"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2Num" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="144dp"
        android:layout_height="98dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:background="#2196F3"
        android:onClick="minus"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="144dp"
        android:layout_height="98dp"
        android:layout_marginTop="48dp"
        android:background="#2196F3"
        android:onClick="divide"
        android:text="/"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toEndOf="@+id/btnMinus"
        app:layout_constraintTop_toBottomOf="@+id/btnTimes"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/btnTimes"
        android:layout_width="144dp"
        android:layout_height="98dp"
        android:layout_marginTop="52dp"
        android:background="#2196F3"
        android:onClick="times"
        android:text="x"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/txt2Num" />

    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="340dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMinus"
        app:layout_constraintVertical_bias="0.274" />

</androidx.constraintlayout.widget.ConstraintLayout>